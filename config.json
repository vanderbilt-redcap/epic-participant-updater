{
    "name": "Epic Participant Updater",
    "namespace": "Vanderbilt\\EpicParticipantUpdater",
    "description": "Fetch data from EPIC XML file.",
    "authors": [
        {
             "name": "Francesco Delacqua",
             "email": "francesco.delacqua@vumc.org",
             "institution": "Vanderbilt University Medical Center"
         }
     ],
     "enable-every-page-hooks-on-system-pages": true,
     "permissions": [
         "redcap_module_system_enable",
         "redcap_module_system_disable"
    ],
    "links": {
        "control-center": [
            {
                "name": "Epic Participant Updater",
                "icon": "report",
                "url": "dashboard.php"
            }
         ]
     },
     "no-auth-pages": [
        "api"
     ],
     "system-settings": [
        {
            "key": "api_token",
            "name": "API token (must be sent with every request)",
            "type": "text",
            "required": true
         }
     ],
     "project-settings": [
        {
           "key": "descriptive-text",
           "name": "Set the mapping fields.",
           "type": "descriptive"
        },
        {
            "key": "mrn-mapping",
            "name": "MRN",
            "required": true,
            "type": "field-list"
        },
        {
            "key": "status-mapping",
            "name": "Status",
            "required": true,
            "type": "field-list"
        }
     ],
    "log-file": "log.txt"
 }